<html>
  <head>
    <title><%= title %></title>
    </head>
  <body>
    <h1><%= title %></h1>
    
  </body>
    <form method="post" action="/">
    <input type='text' name='username' placeholder="enter your user name" value=<%= user.username %>></br>
    <% if(errors.username){%>
    <p><%= errors.username.msg %></p>
    <% } %>
    <input type='text' name='password' placeholder="enter your password"></br>
    <% if(errors.password){%>
      <p><%= errors.password.msg %> </p>
      <% } %>
    <input type='text' name='cpassword' placeholder="enter your confirm password"></br>
    <input type='submit' name='submit' value="Save">
    </form> 
  
    </html>